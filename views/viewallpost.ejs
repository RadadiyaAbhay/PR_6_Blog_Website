<%- include('header')%>

    <body>
        <div class="container-scroller">
            <%- include('navbar')%>

                <!-- partial -->
                <div class="container-fluid page-body-wrapper">
                    <!-- partial:partials/_sidebar.html -->
                    <%- include('sidebar')%>

                        <!-- partial -->
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body d-flex flex-wrap">
                                            <% newData.map((data)=>{ %>
                                                <div class="p-2 col-xl-4 col-sm-6 col-12">
                                                    <div class="card col-12 border-3 border border-secondary-subtle ">
                                                        <div class="col-12 rounded overflow-hidden align-items-center d-flex justify-content-center "
                                                            style="height: 200px;">
                                                            <img src="<%= data.blog.images[0] %>" class="card-img-top"
                                                                alt="...">
                                                        </div>
                                                        <div class="card-body p-4"
                                                            style="background-color:rgb(242,237,243);">
                                                            <h5 class="card-title text-truncate mb-1">
                                                                <%= data.blog.title %>
                                                            </h5>
                                                            <p class="card-text text-break text-truncate"><%= data.blog.description%></p>
                                                            <p class="mb-0 text-break text-truncate bg-dark px-4 py-1 text-white" style="position: absolute; top: 0px; left: 0%; border-radius: 5px 0 7px 0 ;"><%= data.category.title%> / <%= data.subcategory.title%></p>

                                                            <div class="d-flex  justify-content-center align-items-center ">
                                                                <div class="col-2">
                                                                    <img src="<%= data.author?.profile%>" style="width: 35px;height: 35px;" class="rounded-circle" alt="">
                                                                </div>
                                                                <div class="col-10">
                                                                    <p class="mb-0 text-break text-truncate fw-bolder"><%= data.author?.name %></p>
                                                                    <p class="mb-0 text-break text-truncate"><%= data.author?.designation %></p>
                                                                </div>
                                                            </div>
                                                            <% let date = new Date(data.blog.createdAt) %>
                                                            <p class="mb-0 text-break text-truncate mt-2"><%= date.getFullYear()%> - <%= date.getMonth() +1 < 10 ? '0'+(date.getMonth() +1) : date.getMonth()  %> - <%= date.getDay() < 10 ? '0'+(date.getDay()) : date.getDay()%></p>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                                <%})%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%- include('footer')%>