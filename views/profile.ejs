<%- include('header')%>

    <body>
        <div class="container-scroller">
            <%- include('navbar')%>

                <!-- partial -->
                <div class="container-fluid page-body-wrapper">
                    <!-- partial:partials/_sidebar.html -->
                    <%- include('sidebar')%>

                        <!-- partial -->
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="col-12">
                                            <div class="card-body d-flex col-12">
                                                <div class="col-3 pe-5">
                                                    <img src="<%= admin.profile %>"
                                                        class="rounded-circle border border-5 border-dark"
                                                        alt="" style="height: 250px;width: 250px;">
                                                </div>
                                                <div class="col-9">
                                                    <h4 class="fw-bold fs-3 pt-3">Profile Information</h4>
                                                    <div class="flex pt-4">
                                                        <label class="mb-0 d-inline pb-1 pt-2 fs-5 fw-bold">Name : </label>
                                                        <p class="d-inline fw-semibold fs-6"><%= admin.name%></p>
                                                    </div>
                                                    <div class="flex pt-3">
                                                        <label class="mb-0 d-inline pb-1 pt-2 fs-6 fw-bold">Designation : </label>
                                                        <p class="d-inline fw-semibold fs-6"><%= admin.designation == null ? "----" : admin.designation%></p>
                                                    </div>
                                                    <div class="flex pt-3">
                                                        <label class="mb-0 d-inline pb-1 pt-2 fs-6 fw-bold">Email : </label>
                                                        <p class="d-inline fw-semibold fs-6"><%= admin.email == null ? "----" : admin.email%></p>
                                                    </div>
                                                    <div class="flex pt-3">
                                                        <label class="mb-0 d-inline pb-1 pt-2 fs-6 fw-bold">Bio : </label>
                                                        <p class="d-inline fw-semibold fs-6"><%= admin.bio == null ? "----" : admin.bio%></p>
                                                    </div>
                                                    <div class="mt-4">
                                                        <a href="/profileedit"  class="btn btn-primary">Edit Profile</a>
                                                        <a href="/changepassword"  class="btn btn-danger">Change Password</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <%- include('footer')%>